                        new SelectListItem { Value = "3" , Text = "مركبات" },
                        new SelectListItem { Value = "4" , Text = "اثاث" },
                        new SelectListItem { Value = "5" , Text = "العاب اطفال" },
                        new SelectListItem { Value = "6" , Text = "اكسسوارات" },
                        new SelectListItem { Value = "7" , Text = "اخرى" },
                        }, new { @class = "form-select rounded", id = "TypeId" })
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    @Html.Label("المدينة", new { @class = "form-label mb-1" })
