@model SwapYE.Models.Item
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStatic.cshtml";
}



<section>
    <section class="container" style="margin-top: 120px; margin-bottom: 40px;">
        @using (Html.BeginForm("Create", "Items", FormMethod.Post, new { enctype = "multipart/form-data",id= "FormItemCreate" }))
        {
            <div class="row ">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <h3 class="my-3 text-color-blue form-line5">اضافة منتج</h3>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 ">
                    <div class="form-group">
                        @Html.Label("الاسم", new { @class = "form-label mb-1" })
                        @Html.TextBox("ItemName", " ", new { @class = "form-control rounded" })
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        @Html.Label("الوصف", new { @class = "form-label mb-1" })
                        @Html.TextBox("Description_1", " ", new { @class = "form-control rounded", id = "Description_1" })
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        @Html.Label("نوع", new { @class = "form-label mb-1" })
                        @Html.DropDownList("TypeId",
                        new List<SelectListItem> {
                        new SelectListItem{Value = "33" , Text = "اختر..",Disabled = true },
                        new SelectListItem { Value = "1" , Text = "كهربائيات" },
